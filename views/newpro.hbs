<html>
<head>
    <title> Add New Product</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.css">
    <link rel="stylesheet" href="/public/style.css">
</head>
<body>

    
    {{#ifEquals prost 'Invalid product'}}
            <div class="invalidpro">
                <p> Invalid Or Incomplete Details !</p>
            </div>
    {{/ifEquals}}

    {{#ifEquals prost 'Product added'}}
            <div class="proadded">
                <p> Product Added Successfully</p>
            </div>
    {{/ifEquals}}


    <div class="main">
        <div class="di">
            <div class="insidepro">

                        <form action="/prod/addproduct" method="post" onsubmit="refresh()" enctype="multipart/form-data">

                                        <div class="row">
                                            <div class="col">
                                                <input class="form-control" type="text" name="product" placeholder="Product Name" required>
                                            </div>
                                        </div>

                                        <br><p style="text-align: center">( THIS PRODUCT IS FOR )</p>

                                        <div class="row">
                                            <div class="col">
                                                <select class="form-select" name="passingyear" required>
                                                    <option value="" disabled selected>Passing Out Year</option>
                                                    <option value="2022">2022</option>
                                                    <option value="2023">2023</option>
                                                    <option value="2024">2024</option>
                                                    <option value="2025">2025</option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="row">
                                                    <div class="col">
                                                        <select class="form-select" name="course" required>
                                                            <option value="" disabled selected>Course</option>
                                                            <option value="b.tech">B.TECH</option>
                                                            <option value="m.tech">M.TECH</option>
                                                        </select>
                                                    </div>

                                                    <div class="col">
                                                        <select class="form-select" name="branch" required>
                                                            <option value="" disabled selected>Branch</option>
                                                            <option value="cs">CS</option>
                                                            <option value="it">IT</option>
                                                            <option value="ec">EC</option>
                                                            <option value="me">ME</option>
                                                        </select>
                                                    </div>
                                        </div>

                                        <div class="row">
                                                    <div class="col">
                                                        <input class="form-control" id="inlineFormInputGroup" type="number" name="price"  placeholder="Price" required>
                                                    </div>

                                                    <div class="col">
                                                        <input id="f02" type="file" accept="image/png, image/jpg" name="image" placeholder="Image">
                                                        <label for="f02">Image</label>
                                                    </div>
                                        </div>

                                        <input type="hidden" name="mobileno" id="mn">
                                        <input type="hidden" name="rollno" id="rn">

                                        <div class="row">
                                            <button type="submit" class="btn btn-warning">Add Product</button>
                                        </div>

                        </form>

            </div>
        </div>
    </div>



        <script>
                    var no = localStorage.getItem("mobileno");
                    var ro = localStorage.getItem("rollno");

                    document.getElementById("mn").value = no;
                    document.getElementById("rn").value = ro;

                    function refresh() {
                        localStorage.setItem("flag", 1);
                    }

                    $("[type=file]").on("change", function () {

                        var file = this.files[0].name;
                        var dflt = $(this).attr("placeholder");
                        if ($(this).val() != "") {
                            $(this).next().text(file);
                        } else {
                            $(this).next().text(dflt);
                        }
                    });
        </script>

</body>
</html>